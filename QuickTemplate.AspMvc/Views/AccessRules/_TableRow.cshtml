@*@CodeCopy*@
@*#if ACCESSRULES_ON*@@*
@model QuickTemplate.AspMvc.Models.Account.AccessRule

<tr>
    <td>
        @Html.DisplayFor(model => model.Type)
    </td>
    <td>
        @Html.DisplayFor(model => model.EntityType)
    </td>
    <td>
        @Html.DisplayFor(model => model.RelationshipEntityType)
    </td>
    <td>
        @Html.DisplayFor(model => model.PropertyName)
    </td>
    <td>
        @Html.DisplayFor(model => model.AccessType)
    </td>
    <td>
        @{
            string operation = string.Empty;

            if (Model.Creatable)
            {
                operation += "C ";
            }
            if (Model.Readable)
            {
                operation += "R ";
            }
            if (Model.Updatable)
            {
                operation += "U ";
            }
            if (Model.Deletable)
            {
                operation += "D ";
            }
        }
        @operation
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
        @Html.ActionLink("Details", "Details", new { id=Model.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id=Model.Id })
    </td>
</tr>
*@@*#endif*@
